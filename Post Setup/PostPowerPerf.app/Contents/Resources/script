#!/bin/bash
sudo pmset restoredefaults
sudo pmset -a disablesleep 1
sudo pmset -a standby 0
sudo pmset -a womp 0
sudo pmset -a halfdim 0
sudo pmset -a proximitywake 0
sudo pmset -a powernap 0
sudo pmset -a networkoversleep 0
sudo pmset -a disksleep 0
sudo pmset -a sleep 0
sudo pmset -a hibernatemode 0
sudo pmset -a ttyskeepawake 0
sudo pmset -a displaysleep 2
sudo pmset -a tcpkeepalive 0
sudo pmset -a lidwake 0
sudo pmset -b standby 0
sudo pmset -b womp 0
sudo pmset -b halfdim 0
sudo pmset -b proximitywake 0
sudo pmset -b powernap 0
sudo pmset -b networkoversleep 0
sudo pmset -b disksleep 0
sudo pmset -b sleep 0
sudo pmset -b hibernatemode 0
sudo pmset -b ttyskeepawake 0
sudo pmset -b displaysleep 2
sudo pmset -b tcpkeepalive 0
sudo pmset -b lidwake 0
sudo pmset -c standby 0
sudo pmset -c womp 0
sudo pmset -c halfdim 0
sudo pmset -c proximitywake 0
sudo pmset -c powernap 0
sudo pmset -c networkoversleep 0
sudo pmset -c disksleep 0
sudo pmset -c sleep 0
sudo pmset -c hibernatemode 0
sudo pmset -c ttyskeepawake 0
sudo pmset -c displaysleep 2
sudo pmset -c tcpkeepalive 0
sudo pmset -c lidwake 0
exit
